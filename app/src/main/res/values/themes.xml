<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SupesWallpaper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="bg">@color/bg</item>
        <item name="toolbar">@color/toolbar</item>
        <item name="text">@color/text</item>
        <item name="ltext">@color/ltext</item>
        <item name="normal">@color/normal</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SupesWallpaper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.SupesWallpaper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SupesWallpaper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/text</item>
    </style>

    <style name="toolbart" parent="android:Widget.TextView">
        <item name="fontFamily">@font/mons</item>
    </style>
    <style name="mom" parent="android:Widget.TextView">
        <item name="fontFamily">@font/mom</item>
        <item name="textAllCaps">true</item>
    </style>


</resources>